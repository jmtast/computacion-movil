<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Theme de la app -->
    <!-- Fondo negro y texto amarillo -->
    <style name="TaxiNowTheme" parent="AppBaseTheme">
        <item name="android:background">#000000 </item>
        <item name="android:textColor"> #CCCC00 </item>
    </style>

    <!-- Botones estandar -->
    <!-- Fondo amarillo y texto negro -->
    <style name="TaxiNowButton">
        <item name="android:background"> #CCCC00 </item>
        <item name="android:textColor"> #000000 </item>
    </style>
    
    <!-- Fondo verde y texto negro -->
    <style name="TaxiNowButtonGreen">
        <item name="android:background"> #00CC00 </item>
        <item name="android:textColor"> #000000 </item>
    </style>
    
    <!-- Fondo rojo y texto negro -->
    <style name="TaxiNowButtonRed">
        <item name="android:background"> #CC0000 </item>
        <item name="android:textColor"> #000000 </item>
    </style>
    
    <!-- Texto del nombre de la app (título) -->
    <!-- Tamaño muy grande y con texto fijo, centrado horizontalmente -->
    <style name="AppTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">TaxiNow</item>
        <item name="android:textSize">45sp</item>
    </style>
    
    <!-- Texto general de la app -->
    <!-- Tamaño normal para texto general, centrado horizontalmente -->
    <style name="TextNormal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- Texto general de la app -->
    <!-- Tamaño grande para texto importante, centrado horizontalmente -->
    <style name="TextBig">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">27sp</item>
    </style>
    
    <!-- Texto general de la app -->
    <!-- Tamaño chico para disclaimer, centrado horizontalmente -->
    <style name="TextSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
