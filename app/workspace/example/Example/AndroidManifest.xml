<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dc.uba.taxinow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dc.uba.taxinow.application.TaxiNowApplication"
        android:allowBackup="true"
        android:icon="@drawable/taxinow"
        android:label="@string/app_name"
        android:theme="@style/TaxiNowTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver android:name="dc.uba.taxinow.AlarmReceiver" >
        </receiver>

        <service android:name="dc.uba.taxinow.services.LocationService" >
        </service>

        <activity
            android:name="dc.uba.taxinow.activity.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.UserTypeChoosingActivity"
            android:label="@string/title_activity_user_type_choosing"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.TaxiConfigActivity"
            android:label="@string/title_activity_taxi_config" >
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.ShutdownActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_shutdown"
            android:launchMode="singleTask"
            android:taskAffinity="" >
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.SearchingTaxisActivity"
            android:label="@string/title_activity_searching_taxis" >
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.PassengerConfigActivity"
            android:label="@string/title_activity_passenger_config" >
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.TaxiAvailableActivity"
            android:label="@string/title_activity_taxi_available" 
            android:noHistory="true">
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.TaxiTakenActivity"
            android:label="@string/title_activity_taxi_taken" 
            android:noHistory="true">
        </activity>
        <activity
            android:name="dc.uba.taxinow.activity.TaxiThatAcceptedActivity"
            android:label="@string/title_activity_taxi_that_accepted" >
        </activity>
    </application>

</manifest>